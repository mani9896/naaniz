<%- include("../partials/header"); -%>
<div class="container">
    <h2 class="mt-4" style="text-align:center;">Stock Entry</h2>

    <% const result = Array.from(new Set(allSub.map(s => s.Sub_Category))).map(Sub_Category => { 
        return{
            Sub_Category : Sub_Category
        }
    })
        console.log(result)
    %>
    <% result.forEach(item => { %>
        <a class="btn btn-primary" href="/form/stock/<%= item.Sub_Category %> " value="<%= item.Sub_Category %>"><%= item.Sub_Category %></a>
    <% }) %> 
         
    <form action="/form/stock" method="POST">
        <div class="row">
            <div class="col-sm-4">
                <% for( var i= 0 ;i< parseInt(item.length/3) ;i++ ) { %>
                    <div class="mt-4 form-group row">
                        <label class="col-sm-5 col-form-label" for="item"><%= item[i].Item_Name %> (<%= item[i].Unit_Name %>)</label>
                        <div class="col-sm-7"> 
                        <input class="form-control" type="text" name="item" placeholder="quantity"/>
                        </div>
                    </div>
                <% } %>
            </div>

            <div class="col-sm-4">
                <% for( var i= parseInt(item.length/3) ;i< parseInt(item.length/1.5) ;i++ ) { %>
                    <div class="mt-4 form-group row">
                        <label class="col-sm-5 col-form-label" for="item"><%= item[i].Item_Name %> (<%= item[i].Unit_Name %>)</label>
                        <div class="col-sm-7"> 
                        <input class="form-control" type="text" name="item" placeholder="quantity"/>
                        </div>
                    </div>
                <% } %>
            </div>

            <div class="col-sm-4">
                <% for( var i= parseInt(item.length/1.5) ;i< item.length ;i++ ) { %>
                    <div class="mt-4 form-group row">
                        <label class="col-sm-5 col-form-label" for="item"><%= item[i].Item_Name %> (<%= item[i].Unit_Name %>)</label>
                        <div class="col-sm-7"> 
                        <input class="form-control" type="text" name="item" placeholder="quantity"/>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
        <div class="mt-2 form-row">
            <button style="width: 100%;" class="btn btn-primary" type="submit">SUBMIT</button>
        </div>
    </form>
</div>

<%- include("../partials/footer"); -%>
