<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light sticky-top">
        <div class="container">
              <a class="navbar-brand title" href="/">Inventory</a>
              <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" 
                aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span></button>
              <div class="collapse navbar-collapse nav justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <% if(!logged){ %>
                        <li class="nav-item">
                            <span class="oi oi-account-login"></span>
                            <a class="nav-link" href="/user/login"><span><i class="fa fa-sign-in"></i></i></span> Login </a>
                        </li>
                        <li class="nav-item">
                            
                            <a class="nav-link" href="/user/signup"><span><i class="fa fa-user"></i></span> Sign Up </a>
                        </li>
                    <% } else{ %>
                        <li class="nav-item">
                            <a class="nav-link" href="#"> Hi, <%= currentUser %> </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/user/logout"> Logout </a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
